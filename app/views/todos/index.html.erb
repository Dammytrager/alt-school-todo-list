<div class="container">
  <div class="card">
    <div class="card-body d-flex justify-content-between">
      <h1 class="text-center">My Todo list</h1>
      <%= link_to('New Todo', new_todo_path, class: 'btn btn-primary') %>
    </div>
  </div>

  <div class="card mt-5">
    <div class="card-body">
      <table class="table">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Status</th>
          <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
          <% @todos.each_with_index do |todo, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= todo.name %></td>
              <td><%= todo.status %></td>
              <td>
                <%= link_to 'Edit', edit_todo_path(todo) %> ,
                <%= link_to 'Show', todo_path(todo) %>,
                <%= link_to 'Delete', todo_path(todo), method: :delete, data: { confirm: "Are you sure you want to delete this Todo Item?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
